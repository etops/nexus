{
  "compilerOptions": {
    "target": "es2016",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["es2016"],
    "declaration": true,
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "importsNotUsedAsValues": "error",
    "stripInternal": true
  },
  "exclude": [
    "./examples",
    "./scripts",
    "./dist",
    "./tests",
    "./website",
    "./gulpfile.ts",
    "./package.json",
    "./docs"
  ]
}
